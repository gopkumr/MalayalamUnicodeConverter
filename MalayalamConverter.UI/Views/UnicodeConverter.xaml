<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MalayalamConverter.UI.Views.UnicodeConverter"
             Title="Malayalam Converter">
 
    <VerticalStackLayout>
        <Picker x:Name="lstFont" Title="Select a malayalam font" ItemsSource="{Binding Fonts}" ItemDisplayBinding="{Binding Name}" Margin="15,0,0,20"  />
        <Grid ColumnDefinitions="*, *">
            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            
            <VerticalStackLayout >
                <Label Text="Malayalam Ascii" Margin="15,0,0,0" />
                <Editor x:Name="txtSourceText" MinimumHeightRequest="450" Placeholder="Enter the source ascii text" Margin="10,5,10,10"  />
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="1" >
                <Label Text="Malayalam Unicode" Margin="15,0,0,0" />
                <Editor x:Name="txtDesinationText" MinimumHeightRequest="450" IsReadOnly="True" Margin="10,5,10,10" />
            </VerticalStackLayout>
            <Button x:Name="btnConvert" Text="Convert" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" WidthRequest="250" Clicked="btnConvert_Clicked"  />
        </Grid>
    </VerticalStackLayout>
</ContentPage>